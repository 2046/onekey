{
  "name": "onekey",
  "version": "1.1.0",
  "description": "one key install apps",
  "main": "./dist/lib/index.js",
  "engines": {
    "node": ">=14.0.0"
  },
  "bin": {
    "onekey": "./dist/cli/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/2046/onekey.git"
  },
  "author": "2046",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/2046/onekey/issues"
  },
  "homepage": "https://github.com/2046/onekey#readme",
  "dependencies": {
    "@shockpkg/hdi-mac": "^1.7.1",
    "adm-zip": "^0.5.9",
    "axios": "^0.27.2",
    "chalk": "4.1.2",
    "decompress": "^4.2.1",
    "js-yaml": "^4.1.0",
    "listr2": "^4.0.5",
    "plist": "^3.0.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@tsconfig/node14": "^1.0.1",
    "@types/adm-zip": "^0.5.0",
    "@types/decompress": "^4.2.4",
    "@types/jest": "^28.1.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.36",
    "@types/plist": "^3.0.2",
    "@types/rimraf": "^3.0.2",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.3.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^12.4.3",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.2"
  },
  "scripts": {
    "build": "npx tsc",
    "test": "npx jest",
    "dev": "npx tsc -w",
    "commit": "npx git-cz",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "cz.config.js"
    }
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "*.yml": "prettier --write",
    "*.json": "prettier --write",
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "printWidth": 140,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "wip"
        ]
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-floating-promises": [
        "error",
        {
          "ignoreIIFE": true
        }
      ],
      "@typescript-eslint/ban-ts-comment": "off"
    },
    "env": {
      "node": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "testMatch": [
      "**/test/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  }
}
